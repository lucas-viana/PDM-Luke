<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/inputs_claros"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="16dp">

    <!-- Imagem da ação -->
    <ImageView
        android:id="@+id/imageViewAcao"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circle_background"
        android:contentDescription="Imagem da ação"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/luke_feliz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título da ação -->
    <TextView
        android:id="@+id/textViewAcao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/nunito_03"
        android:text="Ação do Dia"
        android:textColor="@color/marrom_01"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageViewIndicador"
        app:layout_constraintStart_toEndOf="@+id/imageViewAcao"
        app:layout_constraintTop_toTopOf="@+id/imageViewAcao" />

    <!-- Descrição da ação -->
    <TextView
        android:id="@+id/textViewDescricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/nunito_03"
        android:text="Descrição da atividade"
        android:textColor="@color/marrom_01"
        android:textSize="14sp"
        android:alpha="0.8"
        app:layout_constraintEnd_toStartOf="@+id/imageViewIndicador"
        app:layout_constraintStart_toEndOf="@+id/imageViewAcao"
        app:layout_constraintTop_toBottomOf="@+id/textViewAcao" />

    <!-- Categoria -->
    <TextView
        android:id="@+id/textViewCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/botao_amarelo_claro"
        android:fontFamily="@font/nunito_03"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingRight="12dp"
        android:paddingBottom="4dp"
        android:text="Categoria"
        android:textColor="@color/marrom_01"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewAcao"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescricao" />

    <!-- Indicador de importância -->
    <ImageView
        android:id="@+id/imageViewIndicadorImportante"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_star"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/imageViewIndicador"
        app:layout_constraintTop_toTopOf="@+id/textViewAcao" />

    <!-- Seta indicadora -->
    <ImageView
        android:id="@+id/imageViewIndicador"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_forward"
        android:alpha="0.6"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewAcao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewAcao" />

    <!-- Botão de ação (oculto por padrão, usado apenas se necessário) -->
    <Button
        android:id="@+id/buttonAcao"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/nunito_03"
        android:text="Executar"
        android:textColor="@color/amarelo_01"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAcao" />

</androidx.constraintlayout.widget.ConstraintLayout>