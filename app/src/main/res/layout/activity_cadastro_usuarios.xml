<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarelo_01"
    android:fontFamily="@font/nunito_03"
    android:padding="24dp"
    tools:context=".activities.CadastroActivity">

    <ImageView
        android:id="@+id/imageViewLogoCadastro"
        android:layout_width="180dp"
    android:layout_height="160dp"
    android:layout_marginTop="24dp"
    android:src="@drawable/logo_luke"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewMensagemCadastro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nunito_03"
        android:gravity="center"
        android:text="@string/text_cadastro_titulo"
        android:textColor="@color/marrom_01"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewLogoCadastro" />

    <EditText
        android:id="@+id/editTextNomeCadastro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/inputs_claros"
        android:hint="Nome completo"
    android:inputType="textPersonName"
    android:paddingLeft="20dp"
    android:paddingRight="15dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:textColor="@color/marrom_01"
    android:fontFamily="@font/nunito_03"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/textViewMensagemCadastro" />

    <EditText
        android:id="@+id/editTextEmailCadastro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/inputs_claros"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="@color/marrom_01"
        android:fontFamily="@font/nunito_03"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextNomeCadastro" />

    <EditText
        android:id="@+id/editTextSenhaCadastro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/inputs_claros"
        android:hint="Senha"
        android:textColor="@color/marrom_01"
        android:fontFamily="@font/nunito_03"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextEmailCadastro" />

    <EditText
        android:id="@+id/editTextConfirmarSenhaCadastro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/inputs_claros"
        android:hint="Confirmar Senha"
    android:textColor="@color/marrom_01"
    android:fontFamily="@font/nunito_03"
    android:inputType="textPassword"
    android:paddingLeft="20dp"
    android:paddingRight="15dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/editTextSenhaCadastro" />

    <Button
        android:id="@+id/buttonFinalizarCadastro"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/nunito_03"
        android:text="@string/cadastrar"
    android:textColor="@color/amarelo_01"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/editTextConfirmarSenhaCadastro"
    app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/textViewJaTemConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_03"
        android:text="@string/text_ja_tem_conta"
    android:textColor="@color/marrom_01"
    android:textSize="14sp"
    app:layout_constraintTop_toBottomOf="@id/buttonFinalizarCadastro"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/textViewFazerLogin"
    app:layout_constraintHorizontal_chainStyle="packed"
    app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
        android:id="@+id/textViewFazerLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_03"
        android:text="@string/text_fazer_login_aqui"
    android:textColor="@color/marrom_01"
    android:textStyle="bold"
    android:textSize="14sp"
    android:layout_marginStart="4dp"
    app:layout_constraintTop_toTopOf="@id/textViewJaTemConta"
    app:layout_constraintStart_toEndOf="@id/textViewJaTemConta"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>