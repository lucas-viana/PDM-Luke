<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarelo_01"
    android:fontFamily="@font/nunito_03"
    tools:context=".activities.MainActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/marrom_01"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/amarelo_01" />

    <!-- ScrollView para permitir rolagem -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card de Boas-vindas -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/inputs_claros"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/imageViewLogo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Logo Luke"
                    android:src="@drawable/luke_feliz"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewBoasVindas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/nunito_03"
                    android:text="OlÃ¡! Bem-vindo ao seu DiÃ¡rio de EmoÃ§Ãµes!"
                    android:textColor="@color/marrom_01"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageViewLogo"
                    app:layout_constraintTop_toTopOf="@+id/imageViewLogo" />

                <TextView
                    android:id="@+id/textViewDescricao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/nunito_03"
                    android:text="Escolha uma atividade para comeÃ§ar seu dia de forma organizada e tranquila."
                    android:textColor="@color/marrom_01"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageViewLogo"
                    app:layout_constraintTop_toBottomOf="@+id/textViewBoasVindas" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- TÃ­tulo das aÃ§Ãµes -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/nunito_03"
                android:gravity="center"
                android:text="ðŸŒŸ Minhas Atividades do Dia ðŸŒŸ"
                android:textColor="@color/marrom_01"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- RecyclerView das aÃ§Ãµes -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewAcoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/activity_item_acao_personagem" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button para aÃ§Ã£o rÃ¡pida -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSentimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="Registrar sentimento"
        android:src="@drawable/ic_sentiment_happy"
        app:backgroundTint="@color/marrom_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/amarelo_01" />

</androidx.constraintlayout.widget.ConstraintLayout>