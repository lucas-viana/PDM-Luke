<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissões para notificações -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LukeDiario"
        tools:targetApi="31">
        <activity
            android:name=".activities.ConfiguracoesActivity"
            android:exported="false"
            android:theme="@style/Theme.LukeDiario" />
        <activity
            android:name=".activities.DicaDoDiaActivity"
            android:exported="false"
            android:theme="@style/Theme.LukeDiario" />
        <activity
            android:name=".activities.PostsActivity"
            android:exported="false"
            android:theme="@style/Theme.LukeDiario" />
        <activity
            android:name=".activities.CadastroActivity"
            android:exported="false"
            android:theme="@style/Theme.LukeDiario" />
        <activity
            android:name=".activities.MetasActivity"
            android:exported="false"
            android:theme="@style/Theme.LukeDiario" />
        <activity
            android:name=".SentimentoDoDiaActivity"
            android:exported="false" />
        <activity
            android:name=".activities.IndexActivity"
            android:exported="false"
            android:theme="@style/Theme.LukeDiario" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.LukeDiario">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.LukeDiario" />
        <activity
            android:name=".activities.ItemAcaoPersonagem"
            android:exported="false"
            android:theme="@style/Theme.LukeDiario" />
        <activity
            android:name=".activities.GaleriaAcoesActivity"
            android:exported="false"
            android:theme="@style/Theme.LukeDiario" />
        <activity
            android:name=".activities.SentimentoDiarioActivity"
            android:exported="false"
            android:theme="@style/Theme.LukeDiario" />

        <!-- Receiver para notificações -->
        <receiver
            android:name=".utils.NotificationManager$NotificationReceiver"
            android:exported="false" />

    </application>

</manifest>